#include <stdio.h>

int main() {
    float radius, area;
    const float PI = 3.14159;

    // Asking for input
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculating area
    area = PI * radius * radius;

    // Printing the result
    printf("Area of the circle is: %.2f\n", area);

    return 0;
}
